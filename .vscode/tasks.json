{
  "version": "2.0.0",
  "tasks": [
    {
        "label": "start server",
        "type": "shell",
        "isBackground": true,
        "command": "reload",
        "presentation": {
          "reveal": "silent"
        },
        "problemMatcher": [{
          "pattern": [{
            "regexp": ".",
            "file": 1,"line": 2,
            "column": 3,"message": 5
          }],
          "background": {
              "activeOnStart": true,
              "beginsPattern": {
                  "regexp": "Reload web server"
              },
              "endsPattern": {
                  "regexp": "monitoring dir.*"
              }
          },
        }]
    },
    {
        "label": "stop server",
        "command": "echo ${input:terminate}",
        "type": "shell",
        "problemMatcher": []
    },
  ],
  "inputs": [{
    "id": "terminate",
    "type": "command",
    "command": "workbench.action.tasks.terminate",
    "args": "terminateAll"
  }]
}